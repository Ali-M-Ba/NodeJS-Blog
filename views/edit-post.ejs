<%- include('./partials/header.ejs') %>

<div class="container">
  <div class="form__container">
    <a href="/post/<%= data._id %>">&larr; Back</a>
    <div class="editPost__Heading">
      <h2>Edit Post</h2>
      <form action="/delete-post/<%= data._id %>" method="POST">
        <input type="submit" value="Delete" class="btn delete__btn">
      </form>
    </div>
      <form id="form" class="form" action="/edit-post/<%= data._id %>" method="POST">
				<input id="title" type="text" placeholder="Title" name="title" value="<%= data.title %>" style="font-weight: 600;" required>
				<textarea id="body" name="body" placeholder="Content" rows="5" required><%= data.body %></textarea>
				<input id="submitBtn" type="submit" value="Update" class="btn add__btn">
      </form>
    
  </div>
</div>

<script src="/js/script.js"></script>

<%- include('./partials/footer.ejs') %>